---
import BaseLayout from '../layouts/BaseLayout.astro';
import { withBase } from '../utils/paths';
---

<BaseLayout title="404 — Not Found">
  <div class="not-found">
    <h1>404</h1>
    <p>This page doesn't exist. Maybe it was a dream.</p>
    <a href={withBase('')}>← Go home</a>
  </div>
</BaseLayout>

<style>
  .not-found {
    text-align: center;
    padding: 4rem 0;
  }

  .not-found h1 {
    font-size: 6rem;
    color: var(--accent);
    margin: 0;
    line-height: 1;
  }

  .not-found p {
    font-size: 1.2rem;
    margin: 1rem 0 2rem;
  }
</style>
