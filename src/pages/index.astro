---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { getReadingTime } from '../utils/readingTime';
import { withBase } from '../utils/paths';

const posts = (await getCollection('posts'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="Patric Slagveer">
  <section class="hero">
    <div class="hero-content">
      <a href={withBase('about/')} class="avatar-link">
        <picture>
          <source srcset="/orcine/patric-avatar.webp" type="image/webp" />
          <img src="/orcine/patric-avatar.jpg" alt="Patric Slagveer" class="hero-avatar" />
        </picture>
      </a>
      <div class="hero-text">
        <h1>Hi, I'm <span class="accent">@patric_slagveer</span>.</h1>
        <a href={withBase('rss.xml')} class="rss-link">RSS Feed</a>
        <p class="tagline">
          Building modern apps with Angular, Azure AI, NestJS, n8n & Nx.
        </p>
        <p class="tagline">
          Every project is an opportunity to push boundaries and ship great software.
        </p>
      </div>
    </div>
  </section>

  <section class="posts">
    <ul>
      {posts.map((post) => {
        const readingTime = getReadingTime(post.body || '');
        const formattedDate = post.data.pubDate.toLocaleDateString('en-US', {
          day: 'numeric',
          month: 'short',
          year: 'numeric',
        });
        return (
          <li>
            <a href={withBase(`posts/${post.id}/`)} class="post-link">
              <span class="post-title">{post.data.title}</span>
              <span class="post-meta">
                Published: {formattedDate} • {readingTime}
              </span>
              <span class="post-desc">{post.data.description}</span>
            </a>
          </li>
        );
      })}
    </ul>
  </section>

  <div class="all-posts">
    <a href={withBase('posts/')}>All Posts →</a>
  </div>
</BaseLayout>

<style>
  .hero {
    padding: 2rem 0 3rem;
    border-bottom: 1px solid var(--border);
    margin-bottom: 2rem;
  }

  .hero-content {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
  }

  .avatar-link {
    flex-shrink: 0;
  }

  .avatar-link picture {
    display: block;
    width: 140px;
    height: 140px;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid var(--border);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .hero-avatar {
    width: 140px;
    height: 140px;
    border-radius: 50%;
    object-fit: cover;
    object-position: center top;
    display: block;
  }

  .avatar-link picture:hover {
    transform: scale(1.05);
    box-shadow: 0 0 20px rgba(88, 166, 255, 0.3);
  }

  @media (max-width: 600px) {
    .hero-content {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .avatar-link picture {
      width: 120px;
      height: 120px;
    }
  }

  .hero h1 {
    font-size: 2rem;
    margin: 0 0 0.25rem;
    display: inline;
  }

  .rss-link {
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin-left: 0.75rem;
    vertical-align: middle;
    border: 1px solid var(--border);
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
    transition: all 0.2s;
  }

  .rss-link:hover {
    color: var(--accent);
    border-color: var(--accent);
    text-decoration: none;
  }

  .accent {
    color: var(--accent);
  }

  .tagline {
    color: var(--text-secondary);
    font-size: 1.15rem;
    margin: 1rem 0 0;
    line-height: 1.6;
  }

  .posts ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .posts li {
    margin: 0;
    padding: 0;
    border-bottom: 1px solid var(--border);
  }

  .posts li:last-child {
    border-bottom: none;
  }

  .post-link {
    display: block;
    padding: 1.25rem 0;
    color: inherit;
    transition: transform 0.15s ease;
  }

  .post-link:hover {
    text-decoration: none;
  }

  .post-link:hover .post-title {
    color: var(--accent);
  }

  .post-title {
    display: block;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text);
    transition: color 0.2s;
  }

  .post-meta {
    display: block;
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin-top: 0.35rem;
    opacity: 0.8;
  }

  .post-desc {
    display: block;
    font-size: 0.95rem;
    color: var(--text-secondary);
    margin-top: 0.35rem;
    line-height: 1.5;
  }

  .all-posts {
    margin-top: 1.5rem;
    text-align: center;
  }

  .all-posts a {
    font-weight: 500;
  }
</style>
