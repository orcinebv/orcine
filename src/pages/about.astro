<style>
  .about-hero {
    display: flex;
    align-items: flex-start;
    gap: 2rem;
    margin-bottom: 1rem;
  }

  .about-avatar {
    width: 180px;
    height: 180px;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
    border: 3px solid var(--border);
  }

  @media (max-width: 600px) {
    .about-hero {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .about-avatar {
      width: 150px;
      height: 150px;
    }
  }

  .about h1 {
    margin-top: 0;
    font-size: 2.25rem;
    letter-spacing: -0.03em;
  }

  .about p {
    font-size: 1.05rem;
    line-height: 1.8;
  }

  .tech-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin: 1.5rem 0 2rem;
  }

  .tech-card {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 8px;
    transition: border-color 0.2s;
  }

  .tech-card:hover {
    border-color: var(--accent);
  }

  .tech-icon {
    width: 36px;
    height: 36px;
    flex-shrink: 0;
    margin-top: 0.15rem;
    border-radius: 0;
    border: none;
  }

  .tech-card strong {
    color: var(--text);
    font-size: 1rem;
  }

  .tech-card p {
    margin: 0.25rem 0 0;
    font-size: 0.9rem;
    color: var(--text-secondary);
  }

  .connect-list {
    list-style: none;
    padding: 0;
  }

  .connect-list li {
    margin-bottom: 0.5rem;
  }

  .connect-list a {
    font-size: 1rem;
  }
</style>
