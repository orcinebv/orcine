---
import BaseLayout from './BaseLayout.astro';
import { withBase } from '../utils/paths';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  readingTime: string;
}

const { title, description, pubDate, updatedDate, readingTime } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdate = updatedDate?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={`${title} — Patric Slagveer`} description={description}>
  <article>
    <header class="post-header">
      <h1>{title}</h1>
      <div class="post-meta">
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        <span class="separator">•</span>
        <span>{readingTime}</span>
        {updatedDate && (
          <>
            <span class="separator">•</span>
            <span>Updated {formattedUpdate}</span>
          </>
        )}
      </div>
    </header>
    <div class="post-content">
      <slot />
    </div>
    <footer class="post-footer">
      <a href={withBase('posts/')}>← Back to all posts</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .post-header {
    margin-bottom: 2.5rem;
  }

  .post-header h1 {
    margin-top: 0;
    font-size: 2.25rem;
    line-height: 1.2;
    letter-spacing: -0.03em;
    color: var(--text);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin-top: 0.75rem;
  }

  .separator {
    opacity: 0.5;
  }

  .post-content {
    font-size: 1.05rem;
    line-height: 1.8;
  }

  .post-content :global(h2) {
    margin-top: 2.5rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border);
  }

  .post-content :global(p) {
    color: var(--text-secondary);
  }

  .post-content :global(strong) {
    color: var(--text);
  }

  .post-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }
</style>
